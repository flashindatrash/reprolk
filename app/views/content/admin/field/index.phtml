<div class="list-group">
	
<?php
	foreach ($this->routes as $page) {
		$route = Application::$routes->byName($page);
		if (is_null($route)) continue;
		$text = '<h4 class="list-group-item-heading">' . $route->linkText() . '</h4><p class="list-group-item-text">' . $route->linkTitle() . '</p>';
		print View::link(Route::FIELD_PAGE, $text, 'page=' . $page, null, 'list-group-item');
	}
?>

</div>